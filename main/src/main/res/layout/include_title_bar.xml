<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:id="@+id/rlTitle"
	android:transitionName="title"
	android:layout_width="match_parent"
	android:background="@color/colorAccent"
	android:layout_height="@dimen/px150dp">
	
	<ImageView
		android:id="@+id/ivBack"
		android:background="@mipmap/search_back"
		android:layout_centerVertical="true"
		android:layout_marginStart="@dimen/px30dp"
		android:layout_alignParentStart="true"
		android:alpha="0.9"
		android:layout_width="@dimen/px68dp"
		android:layout_height="@dimen/px68dp" />

	
	<TextView
		android:id="@+id/tvTitle"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:textSize="@dimen/px47dp"
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	<ImageView
		android:id="@+id/ivRight"
		android:background="@mipmap/right"
		android:layout_centerVertical="true"
		android:layout_marginEnd="@dimen/px30dp"
		android:layout_alignParentEnd="true"
		android:layout_width="@dimen/px68dp"
		android:layout_height="@dimen/px68dp" />
	
	
</RelativeLayout>