<?xml version="1.0" encoding="utf-8"?>
<layout>
	
	<data>
		<variable
			name="Bean"
			type="String" />
	</data>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	
		<TextView
			android:id="@+id/tvTop"
			android:text="@{Bean}"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_marginStart="@dimen/px40dp"
			android:layout_marginEnd="@dimen/px50dp"
			android:layout_marginTop="@dimen/px50dp"
			android:layout_marginBottom="@dimen/px30dp"
			android:textColor="@color/color_0288d1"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/px180dp" />
		
		
	</LinearLayout>
</layout>