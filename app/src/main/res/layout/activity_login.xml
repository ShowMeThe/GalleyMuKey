<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.LoginActivity">

	
	
		
		<showmethe.github.kframework.widget.banner.Banner
			android:id="@+id/banner"
			app:delayTime="3200"
			app:unselected_color="@color/color_7986cb"
			app:selected_color="@color/color_039be5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:imageMinHeight="@dimen/px2500dp"
			>
		</showmethe.github.kframework.widget.banner.Banner>
		
		
		
		<LinearLayout
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_alignParentBottom="true"
			android:layout_width="match_parent"
			android:layout_height="@dimen/px350dp">
			
			<Button
				android:id="@+id/btnLogin"
				android:layout_width="0dp"
				android:layout_height="@dimen/px150dp"
				android:background="@drawable/shape_rect_039be5"
				android:text="Login"
				android:elevation="@dimen/px5dp"
				android:textColor="@color/white"
				android:textSize="@dimen/px47dp"
				android:layout_weight="1"
				android:layout_marginStart="@dimen/px150dp"
				android:layout_marginEnd="@dimen/px30dp"
				/>
			
			<Button
				android:id="@+id/btnReg"
				android:text="Sign up"
				android:textSize="@dimen/px47dp"
				android:elevation="@dimen/px5dp"
				android:textColor="@color/white"
				android:background="@drawable/shape_rect_7c4dff"
				android:layout_width="0dp"
				android:layout_height="@dimen/px150dp"
				android:layout_weight="1"
				android:layout_marginEnd="@dimen/px150dp"
				android:layout_marginStart="@dimen/px30dp"
				/>
		
		</LinearLayout>
	
</RelativeLayout>