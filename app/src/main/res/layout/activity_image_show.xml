<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/color_7986cb"
	tools:context=".ui.main.ImageShowActivity">
	
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</androidx.appcompat.widget.Toolbar>
	
	<LinearLayout
		android:layout_below="@id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/px150dp">
		
		<ImageView
			android:id="@+id/ivBack"
			android:src="@mipmap/back_1"
			android:layout_gravity="center"
			android:layout_marginStart="@dimen/px30dp"
			android:layout_width="@dimen/px80dp"
			android:layout_height="@dimen/px80dp" />
		
	</LinearLayout>
	
	<ImageView
		android:id="@+id/image"
		android:transitionName="photo"
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	

</RelativeLayout>