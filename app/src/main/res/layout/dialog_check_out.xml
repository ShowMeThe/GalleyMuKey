<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	
	<LinearLayout
		android:orientation="vertical"
		android:background="@drawable/shape_rect_top_radius"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<showmethe.github.kframework.widget.common.PasswordInputView
			android:id="@+id/edPswd"
			android:layout_margin="@dimen/px50dp"
			android:layout_width="match_parent"
			android:layout_height="@dimen/px180dp" />
		
		
		<Button
			android:id="@+id/btnCheck"
			android:textColor="@color/white"
			android:textSize="@dimen/px45dp"
			android:textStyle="bold"
			android:text="Check"
			android:background="@drawable/shape_rect_orange_bg"
			android:layout_margin="@dimen/px30dp"
			android:layout_width="match_parent"
			android:layout_height="@dimen/px150dp" />
		
		
		
	</LinearLayout>
	
</LinearLayout>