<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="@dimen/px25dp"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<EditText
		android:id="@+id/edText"
		android:hint="Input your comment"
		android:textColorHint="@color/colorPrimaryDark"
		android:background="@drawable/shape_rect_raidus_white_85"
		android:padding="@dimen/px15dp"
		android:textColor="@color/colorPrimaryDark"
		android:inputType="textMultiLine"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"/>
	
	<Button
		android:id="@+id/btnSend"
		android:text="Send"
		android:textColor="@color/white"
		android:layout_marginStart="@dimen/px30dp"
		android:background="@drawable/shape_rect_ff6e00"
		android:layout_width="@dimen/px150dp"
		android:layout_height="@dimen/px80dp"/>

</LinearLayout>