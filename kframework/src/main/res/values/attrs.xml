<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="Banner">
        <attr name="selected_color" format="color|reference"/>
        <attr name="unselected_color" format="color|reference"/>
        <attr name="indicator_distant" format="dimension"/>
        <attr name="autoPlay" format="boolean"/>
        <attr name="select_radius" format="dimension"/>
        <attr name="unSelect_radius" format="dimension"/>
        <attr name="delayTime" format="integer"/>
        <attr name="imageScaleType" format="enum">
            <enum name="fixXY" value="0"/>
            <enum name="centerCrop" value="1"/>
        </attr>
        <attr name="showIndicator" format="boolean"/>
        <attr name="imageMinHeight" format="dimension"/>
        <attr name="imageMaxHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="LikeView">
        <attr name="like_state" format="boolean"/>
        <attr name="like" format="reference"/>
        <attr name="unLike" format="reference"/>
    </declare-styleable>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/px43dp</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>


    <declare-styleable name="RectScaleAnim">
        <attr name="rectWidth" format="dimension"/>
        <attr name="rectColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PasswordInputView">
        <attr name="passwordLength" format="integer"/>
        <attr name="passwordInputType" format="enum">
            <enum name="number" value="0"/>
            <enum name="none" value="1"/>
        </attr>
        <attr name="passwordRectColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="RecordButton">
        <!--录制最小时间-->
        <attr name="minTime" format="integer" />
        <!--录制最大时间-->
        <attr name="maxTime" format="integer" />
        <!--内圆颜色-->
        <attr name="innerCircleColor" format="color" />
        <!--外圆颜色-->
        <attr name="annulusColor" format="color" />
        <!--进度条颜色-->
        <attr name="progressColor" format="color" />
        <!--内圆半径-->
        <attr name="innerCircleRadius" format="dimension" />
        <!--外圆半径-->
        <attr name="excircleRadius" format="dimension" />
        <!--外圆放大倍数-->
        <attr name="excicleMagnification" format="float" />
        <!--内圆缩小倍数-->
        <attr name="innerCircleShrinks" format="float" />
    </declare-styleable>

    <declare-styleable name="PullDragLayout">
        <attr name="ContentView" format="reference"/>
        <attr name="BottomView" format="reference"/>
        <attr name="BottomBorderHeight" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="StringPicker">
        <attr name="mode" format="enum">
            <enum name="SINGLE" value="0"/>
            <enum name="COUPLE" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="SideIndexBar">
        <attr name="indexBarTextSize" format="reference" />
        <attr name="indexBarNormalTextColor" format="color" />
        <attr name="indexBarSelectedTextColor" format="color" />
    </declare-styleable>

    <style name="selfProgressWeb" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/self_progress_web</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <declare-styleable name="BallRotationProgressBar">
        <attr name="firstBallColor" format="color"/>
        <attr name="secondBallColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="BubbleLayout">
        <attr name="backgroundColor" format="color"/>
        <attr name="shadow" format="dimension"/>
        <attr name="shadowColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="offset" format="dimension"/>
        <attr name="aroundPadding" format="dimension"/>
        <attr name="distance" format="dimension"/>
        <attr name="directions" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>


    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
    </style>


   <declare-styleable name="TextViewFlipper">
       <attr name="interval" format="integer"/>
       <attr name="textColor" format="color"/>
       <attr name="textSize" format="dimension"/>
       <attr name="duration" format="integer"/>
       <attr name="textGravity" format="enum">
           <enum value="1" name="start"/>
           <enum value="2" name="end"/>
           <enum value="3" name="center"/>
       </attr>
   </declare-styleable>

</resources>